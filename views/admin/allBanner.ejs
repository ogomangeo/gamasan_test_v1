<script>
// 편집 기능 구현
const editButton = document.getElementById('editButton');
let isEditing = false;

editButton.addEventListener('click', () => {
    const cells = document.querySelectorAll('table td:not(:has(img))');
    isEditing = !isEditing;
    
    if (isEditing) {
        // 편집 모드 활성화
        editButton.textContent = '저장';
        cells.forEach(cell => {
            const text = cell.textContent;
            cell.innerHTML = `<input type="text" value="${text}" style="width: 100%; box-sizing: border-box;">`;
        });
    } else {
        // 편집 모드 비활성화 및 저장
        editButton.textContent = '편집';
        cells.forEach(cell => {
            const input = cell.querySelector('input');
            if (input) {
                cell.textContent = input.value;
            }
        });
    }
});
</script>