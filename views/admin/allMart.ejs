  padding: 10px 20px;
  background-color: #4CAF50;
  color: white;
  text-decoration: none;
  border-radius: 4px;
}

.admin-mart-table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 20px;
}

.admin-mart-table th,
