<div class="martd-container">
  <div class="martd-item">
    <%= mart.category1 %> &gt; <%= mart.category2 %>
  </div>
  <h1 class="martd-item">[<%= mart.brand %>] <%= mart.title %>
  </h1>
  <div class="martd-item">
    <%= mart.script %>
  </div>
  <div class="martd-item">
    <% mart.options.forEach(function(option) { %>
      <div class="option-item">
        <%= option.name %> : <%= Math.floor(option.price).toLocaleString() %>원
      </div>
      <% }); %>
  </div>
  <div class="martd-item">
    배송비 : <%= Math.floor(mart.delivery).toLocaleString() %>원
  </div>

  <!-- 추가된 스크립트 영역 -->
  <% if (mart.additional_script1) { %>
    <div class="martd-item">
      <%= mart.additional_script1 %>
    </div>
    <% } %>
      <% if (mart.additional_script2) { %>
        <div class="martd-item">
          <%= mart.additional_script2 %>
        </div>
        <% } %>
          <% if (mart.additional_script3) { %>
            <div class="martd-item">
              <%= mart.additional_script3 %>
            </div>
            <% } %>

            🎉현재 판매 중인 온라인 마켓입니다~🛒 🎯 원하는 마켓을 클릭하면 이동합니다~🚀
              <!-- 버튼 및 네비게이션 그룹 -->
              <div class="martd-button-navigation-group">
                <!-- 마켓 링크 버튼 그룹 -->
                <div class="martd-button-group">
                  <% if (mart.market_link && mart.market_link.length> 0) { %>
                    <% mart.market_link.forEach(function(link) { %>
                      <a href="<%= link.market_url.startsWith('http') ? link.market_url : 'https://' + link.market_url %>"
                        class="martd-button" target="_blank" rel="noopener noreferrer"
                        aria-label="<%= link.market_name %>">
                        <%= link.market_name %>
                          <% if (link.market_options && link.market_options.length> 0) { %>
                            <div class="market-options-tooltip">
                              <% link.market_options.forEach(function(option) { %>
                                <div class="option-item">
                                  <%= option.name %> : <%= Math.floor(option.price).toLocaleString() %>원
                                </div>
                                <% }); %>
                            </div>
                            <% } %>
                      </a>
                      <% }); %>
                        <% } %>
                </div>
                <!-- 네비게이션 버튼 그룹 -->
                <div class="martd-navigation-buttons">
                  <% if (previousMart) { %>
                    <a href="/mart/<%= previousMart._id %>"><button>이전</button></a>
                    <% } else { %>
                      <button disabled>이전</button>
                      <% } %>
                        <% if (nextMart) { %>
                          <a href="/mart/<%= nextMart._id %>"><button>다음</button></a>
                          <% } else { %>
                            <button disabled>다음</button>
                            <% } %>
                              <a href="/mart"><button>목록</button></a>
                </div>
              </div>

              <!-- 썸네일 그룹 영역 -->
              <div class="martd-thumbnail-group">
                <div class="martd-thumbnails">
                  <div class="martd-thumbnail-row">
                    <div class="martd-thumbnail"><img src="<%= mart.thumbnail1 %>" alt="thumbnail1"></div>
                    <div class="martd-thumbnail"><img src="<%= mart.thumbnail2 %>" alt="thumbnail2"></div>
                    <div class="martd-thumbnail"><img src="<%= mart.thumbnail3 %>" alt="thumbnail3"></div>
                  </div>
                  <div class="martd-thumbnail-row">
                    <% if (mart.additional_thumbnail1) { %>
                      <div class="martd-additional-thumbnail"><img src="<%= mart.additional_thumbnail1 %>"
                          alt="additional thumbnail1"></div>
                      <% } %>
                        <% if (mart.additional_thumbnail2) { %>
                          <div class="martd-additional-thumbnail"><img src="<%= mart.additional_thumbnail2 %>"
                              alt="additional thumbnail2"></div>
                          <% } %>
                            <% if (mart.additional_thumbnail3) { %>
                              <div class="martd-additional-thumbnail"><img src="<%= mart.additional_thumbnail3 %>"
                                  alt="additional thumbnail3"></div>
                              <% } %>
                  </div>
                </div>
              </div>

              <!-- 상세 이미지들 -->
              <% if (mart.detailed_images && mart.detailed_images.length> 0) { %>
                <div class="martd-detailed-page">
                  <% mart.detailed_images.forEach(function(image, index) { %>
                    <div class="detailed-image-item">
                      <img src="<%= image %>" alt="상세 이미지 <%= index + 1 %>" style="max-width: 100%;">
                    </div>
                    <% }); %>
                </div>
                <% } %>
</div>