<!-- views/include/_header.ejs -->
<header class="header-container">
  <!-- 상단 유저 정보 영역 -->
  <div class="top-header">
    <div class="header-content">
      <!-- 최근 공지사항이 있을 경우에만 표시 -->
      <div class="sale-banner">
        <% if (typeof latestNotice !== 'undefined' && latestNotice) { %>
            <a href="/notice/<%= latestNotice._id %>" class="latest-notice-link">
                <%= latestNotice.title %>
            </a>
        <% } else { %>
            Welcome Avopic page
        <% } %>
    </div>
      <div class="user-actions">
        <% if (member) { %>
          <span class="user-info">
            <a href="/member/<%= member.username %>" class="username-link">
              <%= member.username %>
                (<%= member.email %>)
            </a>
          </span>
          <span>|</span>
          <a href="/logout">Logout</a>
          <% } else { %>
            <a href="/login">Login</a>
            <span>|</span>
            <a href="/join">Join</a>
            <% } %>
      </div>
    </div>
  </div>

  <!-- 메인 네비게이션 영역 -->
  <nav class="navbar">
      <div class="nav-brand">
          <a href="/home">Avopic</a>
      </div>
      
      <button class="nav-toggle" aria-label="toggle navigation">
          <span class="hamburger"></span>
      </button>

      <div class="nav-menu">
          <ul class="nav-list">
              <li><a href="/program" class="nav-link <%= (locals.path?.startsWith('/program') || locals.title === 'Program') ? 'active' : '' %>">프로그램</a></li>
              <li><a href="/mart" class="nav-link <%= (locals.path?.startsWith('/mart') || locals.title === 'Mart') ? 'active' : '' %>">마트</a></li>
              <li><a href="/archive" class="nav-link <%= (locals.path?.startsWith('/archive') || locals.title === 'Archive') ? 'active' : '' %>">아카이브</a></li>
              <li><a href="/notice" class="nav-link <%= (locals.path?.startsWith('/notice') || locals.title === 'Notice') ? 'active' : '' %>">공지사항</a></li>
              <li><a href="/about" class="nav-link <%= (locals.path?.startsWith('/about') || locals.title === 'About') ? 'active' : '' %>">ABOUT</a></li>
          </ul>
      </div>
    </div>
  </nav>
</header>

<style>
.header-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: white;
  z-index: 1000;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}

/* 상단 유저 정보 영역 스타일 */
.top-header {
  background-color: #f8f9fa;
  padding: 0.5rem 1rem;
  border-bottom: 1px solid #e9ecef;
}

.header-content {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  color: #000080;
  font-weight: 500;
}

.username-link {
  text-decoration: none;
  color: inherit;
}

.username-link:hover {
  text-decoration: underline;
}

.user-actions a {
  color: #333;
  text-decoration: none;
  margin: 0 0.5rem;
}

.user-actions a:hover {
  color: #007bff;
}

/* 네비게이션 영역 스타일 */
.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  max-width: 1200px;
  margin: 0 auto;
}

.nav-brand a {
  font-size: 1.5rem;
  font-weight: bold;
  text-decoration: none;
  color: #333;
}

.nav-menu {
  display: flex;
  align-items: center;
}

.nav-list {
  display: flex;
  list-style: none;
  margin: 0;
  padding: 0;
  gap: 2rem;
}

.nav-link {
  text-decoration: none;
  color: #333;
  font-weight: bold;
  padding: 0.5rem;
  transition: color 0.3s ease;
}

.nav-link:hover {
  color: #007bff;
}

.nav-link.active {
  color: #007bff;
  border-bottom: 2px solid #007bff;
}

.nav-ad {
  max-width: 200px;
}

.nav-ad-image {
  max-height: 40px;
  width: auto;
}

.nav-toggle {
  display: none;
}

/* 본문 여백 */
body {
  padding-top: 80px;
}

/* 반응형 스타일 */
@media (max-width: 968px) {
  body {
      padding-top: 100px;
  }

  .nav-toggle {
      display: block;
      padding: 0.5rem;
      background: none;
      border: none;
      cursor: pointer;
  }

  .hamburger {
      display: block;
      position: relative;
      width: 24px;
      height: 2px;
      background: #333;
  }

  .hamburger::before,
  .hamburger::after {
      content: '';
      position: absolute;
      width: 100%;
      height: 2px;
      background: #333;
      transition: all 0.3s ease;
  }

  .hamburger::before { top: -6px; }
  .hamburger::after { bottom: -6px; }

  .nav-menu {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: white;
      padding: 1rem;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }

  .nav-menu.show {
      display: block;
  }

  .nav-list {
      flex-direction: column;
      gap: 1rem;
  }

  .nav-ad {
      display: none;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const navToggle = document.querySelector('.nav-toggle');
  const navMenu = document.querySelector('.nav-menu');
  
  navToggle.addEventListener('click', () => {
      navMenu.classList.toggle('show');
  });
});
</script>