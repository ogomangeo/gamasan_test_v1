<!-- views/include/_header.ejs -->
<%# console.log('Header member:', locals.member) %>
  <%# console.log('Direct member:', member) %>
    <style>
      .user-info {
        color: #000080;
        font-weight: 500;
      }

      .username-link {
        text-decoration: none;
        color: inherit;
      }

      .username-link:hover {
        text-decoration: underline;
      }
    </style>

    <div class="header">
      <div class="header-content">
        <div class="sale-banner">Welcome Gamasan page</div>
        <div class="user-actions">
          <% if (member) { %>
            <!-- 로그인 상태 -->
            <span class="user-info">
              <a href="/<%= member.username %>" class="username-link">
                <%= member.username %>
                  (<%= member.email %>)
              </a>
            </span>
            <span>|</span>
            <a href="/logout">Logout</a>
            <% } else { %>
              <!-- 비로그인 상태 -->
              <a href="/login">Login</a>
              <span>|</span>
              <a href="/join">Join</a>
              <% } %>
        </div>
      </div>
    </div>